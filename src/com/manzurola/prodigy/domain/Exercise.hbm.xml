<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="com.manzurola.prodigy.domain.Exercise" table="exercises" schema="" catalog="prodigy">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar" length="200" not-null="true"/>
        </property>
        <property name="questionCount">
            <column name="question_count" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="subjectId">
            <column name="subject_id" sql-type="int" length="10" not-null="true"/>
        </property>
        <many-to-one name="subjectsBySubjectId" class="com.manzurola.prodigy.domain.Subject">
            <column name="subject_id" not-null="true"/>
        </many-to-one>
        <set name="questionsesById" inverse="true">
            <key>
                <column name="exercise_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.manzurola.prodigy.domain.Question"/>
        </set>
    </class>
</hibernate-mapping>